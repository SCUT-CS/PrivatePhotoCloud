<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PPPS" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#3F4042</item>  //上方主题条
        <item name="colorPrimaryVariant">#555452</item>//拍照上方任务栏
        <item name="colorOnPrimary">#DA0000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#4575C6</item>  //右下相机底色
        <item name="colorSecondaryVariant">#4D84D5</item>
        <item name="colorOnSecondary">#8E0F0F</item> //相机图标
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PPPS.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="dir_popupwindow_anim">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="Theme.PPPS.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PPPS.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>